<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="style/mis_solicitudes.css">
    <link rel="stylesheet" href="style/pagina_solicitud.css">
    <title>Mis Solicitudes</title>
</head>
<body>
    <%- include('partials/header', {index:0}) %>        <!-- Se incluye el header con la variable index en 0 para que aparezca el boton de inicio -->

    <main class="container text-center bg-body-secondary shadow">
        <h1 class="text-bg-dark rounded mb-4">información de la Solicitud</h1>

        <table class="table table-striped table-bordered">
            <tbody>
                <tr>
                    <th>Hospital:</th>
                    <td><%= solicitud.NombreHospital %></td>
                </tr>
                <tr>
                    <th>Sección:</th>
                    <td><%= solicitud.NombreSeccion %></td>
                </tr>
                <tr>
                    <th>Fecha:</th>
                    <td><%= solicitud.HoraSolicitud.getDate() + "/" + solicitud.HoraSolicitud.getMonth() + "/" + solicitud.HoraSolicitud.getFullYear() + " " + solicitud.HoraSolicitud.getHours() + ":" + solicitud.HoraSolicitud.getMinutes() %></td>
                </tr>
                <tr>
                    <th>Mensaje enviado:</th>
                    <td><%= solicitud.Mensaje %></td>
                </tr>
            </tbody>
        </table>
        <% if (solicitud.Estado == "pendiente") { %>
            <a href="<%= '/cancelarsolicitud?idsoli=' + encodeURIComponent(solicitud.IdSolicitud) %>">Cancelar Solicitud</a>
        <% } else { %>
            <p>uwu</p>
        <% } %>
        
        <h3>Respuesta recibida:</h3>
        <div class="soli-info-container">
            <div id="respuesta-rating-container">
                <button id="reportar-respuesta-boton" class="boton-rojo boton-mediano">Reportar Respuesta inadecuada</button>
                <form class="estrellas">
                    <input id="enviar-estrellas-respuesta" type="button" value="Valorar respuesta">

                    <input type="radio" id="star5" name="rating" value="5">
                    <label for="star5">★</label>
                    <input type="radio" id="star4" name="rating" value="4">
                    <label for="star4">★</label>
                    <input type="radio" id="star3" name="rating" value="3">
                    <label for="star3">★</label>
                    <input type="radio" id="star2" name="rating" value="2">
                    <label for="star2">★</label>
                    <input type="radio" id="star1" name="rating" value="1">
                    <label for="star1">★</label>
                </form>
            </div>
            <table>
                <thead>
                    <th>Recepcionista</th>
                    <td>Don Pollo</td>
                </thead>
                <tr>
                    <th>Fecha</th>
                    <td>01/01/2021</td>
                </tr>
                <tr>
                    <th>Hora</th>
                    <td>15:45</td>
                </tr>
                <tfoot>
                    <th>Respuesta</th>
                    <td>Lorem ipsum dolor sit amet consectetur adipisicing elit. Delectus est omnis nulla repudiandae vero recusandae accusamus id odit debitis, iure quos voluptatem mollitia doloremque dolor! Impedit quaerat adipisci enim cupiditate.</td>
                </tfoot>
            </table>
        </div>
    </main>

    <%- include('partials/footer') %>
    
    <script>
        document.getElementById("volver-lista-solicitudes").addEventListener("click", () => {   // Volver a la lista de solicitudes al presionar el botón
            window.location.href = "mis_solicitudes.html";
        });


        // Estrellitas

        document.getElementById("enviar-estrellas-respuesta").addEventListener("click", () => {   // Enviar la valoración de la respuesta
            if (document.querySelector('input[name="rating"]:checked') == null) {
                alert("Por favor seleccione una valoración");
                return;
            }
            let rating_value = document.querySelector('input[name="rating"]:checked').value;
            console.log(rating_value);
            alert("Se ha enviado la valoración de la respuesta: " + rating_value + " estrellas");
        });

        let rating_value = document
        document.getElementsByName("rating").forEach((radio) => {       // Deseleccionar todas las estrellas al iniciar la página
            radio.checked = false;
        });

        // Boton de reportar
        var reportado = false;
        document.getElementById("reportar-respuesta-boton").addEventListener("click", () => {   // Reportar respuesta inadecuada
            if (reportado) {
                alert("Ya ha reportado esta respuesta");
                return;
            }
            if (confirm("¿Está seguro que desea reportar esta respuesta?")) {
                alert("Se ha reportado la respuesta");
                reportado = true;    
            }
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>