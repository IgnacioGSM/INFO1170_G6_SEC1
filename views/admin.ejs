<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel del Administrador - Hospitrack</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <%- include('partials/header') %>
    
    <main class="admin-main container my-4">
        <section id="hospitales" class="mb-4 p-4 bg-white rounded shadow">
            <h2>Gestionar Hospitales</h2>
            <form>
                <div class="row hospital-grid">
                    <% hospitales.forEach(function(hospital) { %>
                        <div class="col-md-3 col-sm-6 mb-3 d-flex flex-column">
                            <div class="card hospital-card">
                                <div class="card-body text-center">
                                    <h5 class="card-title"><%= hospital.Nombre %></h5>
                                    <!-- Cambiado para usar ejs en lugar de html -->
                                    <a href="/editar_hospital/<%= hospital.IdCentro %>" class="btn btn-custom">Editar</a>

                                </div>
                            </div>
                        </div>
                    <% }); %>
                    <!-- Agregar hospital -->
                    <div class="col-md-3 col-sm-6 mb-3 d-flex flex-column">
                        <div class="card hospital-add">
                            <a href="/agregar_hospital" class="btn-add-hospital">
                                <div class="card-body text-center">
                                    <span class="plus-icon">+</span>
                                    <p>Agregar Hospital</p>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </section>

        <section id="cuentas" class="mb-4 p-4 bg-white rounded shadow">
            <h2>Gestionar Cuentas</h2>
            <div class="d-flex flex-wrap gap-2">
                <a href="agregar_recepcionista.html" class="btn btn-custom">Agregar Cuenta de Recepcionista</a>
                <a href="#" class="btn btn-custom">Eliminar Permisos de Recepcionista</a>
                <a href="#" class="btn btn-secondary">Suspender Usuario</a>
                <a href="#" class="btn btn-danger">Eliminar Cuenta</a>
            </div>
        </section>
    </main>

    <!-- Incluir el footer desde el partial -->
    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
