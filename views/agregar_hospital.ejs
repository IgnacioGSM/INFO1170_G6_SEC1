<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agregar Hospital - Hospitrack</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <%- include('partials/header', { index: 0 }) %>

    <main class="admin-main container my-4">
        <section id="agregar-hospital" class="mb-4 p-4 bg-white rounded shadow" style="max-width: 600px; margin: 0 auto;">
            <h2 class="text-center mb-4">Agregar Hospital</h2>
            <div class="card shadow-sm">
                <div class="card-body">
                    <% if (error) { %>
                        <div class="alert alert-danger"><%= error %></div>
                    <% } %>
                    <% if (success) { %>
                        <div class="alert alert-success"><%= success %></div>
                    <% } %>

                    <form action="agregar_hospital" method="POST">
                        <div class="row">
                            <div class="col-6 mb-3">
                                <label for="latitud" class="form-label">Latitud</label>
                                <input type="text" class="form-control" id="latitud" name="Latitud" required>
                            </div>
                            <div class="col-6 mb-3">
                                <label for="longitud" class="form-label">Longitud</label>
                                <input type="text" class="form-control" id="longitud" name="Longitud" required>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="nombre" class="form-label">Nombre del Hospital</label>
                            <input type="text" class="form-control" id="nombre" name="Nombre" required>
                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-success">Guardar Cambios</button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </main>

    <%- include('partials/footer') %>
    <script src="/js/agregar_hospital.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
